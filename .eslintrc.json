{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:import/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "no-console": "error",
      "react/react-in-jsx-scope": "off"
    },
    "settings": {
      "import/resolver": "babel-plugin-root-import",
      "react": {
        "version": "detect"
      }
    }
}
